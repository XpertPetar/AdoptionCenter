@model Domain.Domain_Models.Adoption_Application

@{
    ViewData["Title"] = "Delete Adoption Application";
}
<h2>Delete Adoption Application</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Adoption Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
        <dt class="col-sm-2">Pet</dt>
        <dd class="col-sm-10">@Model.Pet?.Name</dd>
        
    </dl>
