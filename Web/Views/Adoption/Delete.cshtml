@model Domain.Domain_Models.Adoption_Application

@{
    ViewData["Title"] = "Delete Adoption Application";
}

<div style="background: url('https://images.unsplash.com/photo-1531685250784-7569952593d2?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
                        background-size:cover; width:100%; min-height: 100vh; background-color: rgba(0,0,0,0.1); background-blend-mode: darken;">
    <div class="contianer text-center" style="padding-top: 10vh; padding-bottom:5vh">
        <h1>Are you sure you want to delete this application?</h1>
    </div>
    <div class="container-fluid mt-2">
        <div class="row justify-content-center">
            <div class="col-md-6 d-flex align-items-center justify-content-center p-0">
                <div class="card bg-dark" style="width: 100%; max-width: 500px;">
                    <div class="card-body text-white">
                        <h4 class="card-title">Adoption Application Information</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-4 text-end">First Name</dt>
                            <dd class="col-8">@Model.FirstName</dd>
                            <dt class="col-4 text-end">Last Name</dt>
                            <dd class="col-8">@Model.LastName</dd>
                            <dt class="col-4 text-end">Phone</dt>
                            <dd class="col-8">@Model.Phone</dd>
                            <dt class="col-4 text-end">Email</dt>
                            <dd class="col-8">@Model.Email</dd>
                            <dt class="col-4 text-end">City</dt>
                            <dd class="col-8">@Model.City</dd>
                            <dt class="col-4 text-end">Country</dt>
                            <dd class="col-8">@Model.Country</dd>
                            <dt class="col-4 text-end">Pet</dt>
                            <dd class="col-8">@Model.Pet?.Name</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4 justify-content-center">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-grid gap-2" style="width: 100%; max-width: 500px">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger w-100 mb-3" />
                        <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>