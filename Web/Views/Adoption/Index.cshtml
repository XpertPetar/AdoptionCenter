@model IEnumerable<Domain.Domain_Models.Adoption_Application>

@{
    ViewData["Title"] = "Adoption Applications";
}

<div>
    <div style="background: url('https://images.unsplash.com/photo-1450778869180-41d0601e046e?q=80&w=1886&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')
            no-repeat center center;
            background-size: cover;
            height: 50vh;
            background-color: rgba(0,0,0,0.5);
            background-blend-mode: darken;
            width: 100%;"
         class="text-white">
        <div class="container" style="padding-top: 18vh">
            <h1 class="fw-bolder">Current Adoption Applications</h1>
            <p class="lead text-loght">click below to apply your future furry friend</p>
            <a asp-action="Create" class="btn btn-dark rounded-1 btn-lg text-uppercase shadow-sm">Apply</a>
        </div>
    </div>

    <div class="table-responsive mt-2 mb-5">
        <table class="tavle table-striped table table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Pet Name</th>
                    <th>Pet Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {
                    <tr class="text-center">
                        <td>@app.FirstName</td>
                        <td>@app.LastName</td>
                        <td>@app.Pet?.Name</td>
                        <td>
                            @if (!string.IsNullOrEmpty(app.Pet?.imageUrl))
                            {
                                <img src="@app.Pet.imageUrl" alt="@app.Pet.Name" style="max-width: 120px; max-height: 80px; object-fit: cover;" />
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-light">Edit</a>
                            <a asp-action="Details" asp-route-id="@app.Id" class="btn btn-light">Details</a>
                            <a asp-action="Delete" asp-route-id="@app.Id" class="btn btn-light">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>