@model Domain.Domain_Models.Adoption_Application

@{
    ViewData["Title"] = "Adoption Application Details";
}

<div style="background: url('https://images.unsplash.com/photo-1531685250784-7569952593d2?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
                        background-size:cover; width:100%; min-height: 100vh; background-color: rgba(0,0,0,0.4); background-blend-mode: darken;">
    <div class="container text-center" style="padding-top: 10vh">
        <h1>Adoption Application details for @Model.LastName and @Model.Pet?.Name</h1>
        <p>view the details for this application</p>
    </div>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card bg-dark">
                    <div class="card-body text-white">
                        <h4>Application Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">First Name</dt>
                            <dd class="col-sm-8">@Model.FirstName</dd>
                            <dt class="col-sm-4">Last Name</dt>
                            <dd class="col-sm-8">@Model.LastName</dd>
                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@Model.Phone</dd>
                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@Model.Email</dd>
                            <dt class="col-sm-4">City</dt>
                            <dd class="col-sm-8">@Model.City</dd>
                            <dt class="col-sm-4">Country</dt>
                            <dd class="col-sm-8">@Model.Country</dd>
                            <dt class="col-sm-4">Pet</dt>
                            <dd class="col-sm-8">@Model.Pet?.Name</dd>
                        </dl>
                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary w-100">Edit</a> 
                            <a asp-action="Index" class="btn btn-secondary w-100 mt-3">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>