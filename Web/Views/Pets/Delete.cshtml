@model Domain.Domain_Models.Pet

@{
    ViewData["Title"] = "Delete";
}
<div class="container-fluid">
    <div class="row min-vh-100 justify-content-center align-items-center">

        <div class="col-md-6 col-lg-4 text-center">
            <div style="width: 100%;">
                <h4>Delete Pet</h4>
                <hr />
                <h3>Are you sure you want to delete this pet?</h3>
                <div>
                    <h4>Pet Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.Breed)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.Breed)
                        </dd>
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.Age)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.Age)
                        </dd>
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.Sex)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.Sex)
                        </dd>
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.IsVacinated)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.IsVacinated)
                        </dd>
                        <dt class="col-4 text-end">
                            @Html.DisplayNameFor(model => model.imageUrl)
                        </dt>
                        <dd class="col-8">
                            @Html.DisplayFor(model => model.imageUrl)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger w-100 mb-3" />
                    </form>
                    <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </div>
        </div>

    </div>
</div>
