@model Domain.Domain_Models.DTO.CreatePetDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid  mb-2">
    <div class="row min-vh-100">

        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div style="width: 80%;">
                <h4> Information</h4>
                <hr />
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Pet.Name" class="control-label">Name</label>
                        <input asp-for="Pet.Name" class="form-control" />
                        <span asp-validation-for="Pet.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pet.Breed" class="control-label">Breed</label>
                        <input asp-for="Pet.Breed" class="form-control" />
                        <span asp-validation-for="Pet.Breed" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pet.Age" class="control-label"></label>
                        <input asp-for="Pet.Age" class="form-control" />
                        <span asp-validation-for="Pet.Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pet.Sex" class="control-label"></label>
                        <input asp-for="Pet.Sex" class="form-control" />
                        <span asp-validation-for="Pet.Sex" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pet.Description" class="control-label"></label>
                        <input asp-for="Pet.Description" class="form-control" />
                        <span asp-validation-for="Pet.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pet.IsVacinated" class="control-label">Vaccination Status</label>
                        <input asp-for="Pet.IsVacinated" class="form-control" />
                        <span asp-validation-for="Pet.IsVacinated" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Pet.imageUrl" class="control-label">Image URL</label>
                        <input asp-for="Pet.imageUrl" class="form-control" />
                        <span asp-validation-for="Pet.imageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pet.ShelterId" class="control-label">Shelter</label>
                        <select asp-for="Pet.ShelterId" class="form-control">
                            <option value="">-- Select a Shelter --</option> 
                            @foreach (var shelter in Model.Shelters)
                            {
                                <option value="@shelter.Id">@shelter.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Pet.ShelterId" class="text-danger"></span>
                    </div>


                    <div class="form-group mt-3">
                        <input type="submit" value="Create" class="btn btn-secondary w-100" />
                    </div>
                </form>

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 image-container"></div>
    </div>
</div>

<style>
    .image-container {
        background-image: url('https://images.unsplash.com/photo-1560743173-567a3b5658b1?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-size: cover;
        min-height: 100vh;
        margin-bottom: auto;
        background-color: rgba(0,0,0,0.3);
        background-blend-mode: darken;
        /* border: 2px solid red; Debug */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
